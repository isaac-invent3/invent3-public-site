{
  "format": "page",
  "id": "blog_post",
  "label": "Blog Post",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "preview_image": {
        "type": "Image",
        "config": {
          "label": "Preview Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": "Blog Title"
        }
      },
      "author": {
        "type": "Text",
        "config": {
          "label": "Author's Name",
          "placeholder": "Blog Author"
        }
      },
      "content": {
        "type": "StructuredText",
        "config": {
          "label": "content",
          "placeholder": "Blog Content",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "tags": {
        "type": "Group",
        "config": {
          "label": "tags",
          "repeat": true,
          "fields": {
            "tag_name": {
              "type": "Text",
              "config": {
                "label": "tag name",
                "placeholder": ""
              }
            }
          }
        }
      },
      "author_image": {
        "type": "Image",
        "config": {
          "label": "Author Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {}
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
