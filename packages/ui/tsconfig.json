{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./",
    "jsx": "react-jsx",
    "types": ["react", "react-dom"],
    "skipLibCheck": true
  },
  "include": [
    "packages/**/*",
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*",
    ".next/types/**/*.ts",
    "react-table.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
